<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="personal.nmartinez.fr.spingoal.playofflinemulti.PlaySplitScreenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/wheel_icon"
                    />

                <TextView
                    android:id="@+id/selected_wheel_splitscreen_label_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/every_wheels"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"
                    android:background="@color/main_green"
                    />

                <View android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"
                    android:background="@color/gold"
                    />

            </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="@string/star_number_label"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/player_1_stars_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:src="@drawable/randomstars"
                        android:visibility="visible"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <ProgressBar
                        android:id="@+id/first_player_stars_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </FrameLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_1_pick_stars_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/roll"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/player_2_stars_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:src="@drawable/randomstars"
                        android:visibility="visible"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <ProgressBar
                        android:id="@+id/second_player_stars_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </FrameLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_2_pick_stars_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/roll"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_half_objective_label"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/field_first_period"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/player_1_period_1_objective_textview"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:text="@string/pick_objective_label"
                        android:visibility="visible"
                        android:background="@color/main_green"
                        />
                    <ProgressBar
                        android:id="@+id/first_player_first_objective_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>
                </FrameLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_1_pick_period_1_objective_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/roll" />

                    <ImageView
                        android:id="@+id/player_1_period_1_display_or_hide_objective_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/hide_icon"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:layout_marginRight="10dp"
                android:layout_weight="0.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/player_2_period_1_objective_textview"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingRight="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:text="@string/pick_objective_label"
                        android:visibility="visible"
                        android:background="@color/main_green"/>

                    <ProgressBar
                        android:id="@+id/second_player_first_objective_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_2_pick_period_1_objective_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/roll"/>

                    <ImageView
                        android:id="@+id/player_2_period_1_display_or_hide_objective_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:src="@drawable/hide_icon"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            ></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/second_half_objective_label"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/field_second_period"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/player_1_period_2_objective_textview"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingRight="3dp"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:text="@string/pick_objective_label"
                        android:visibility="visible"
                        android:background="@color/main_green"
                        />

                    <ProgressBar
                        android:id="@+id/first_player_second_objective_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_1_pick_period_2_objective_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/roll"/>

                    <ImageView
                        android:id="@+id/player_1_period_2_display_or_hide_objective_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:src="@drawable/hide_icon"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/player_2_period_2_objective_textview"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:text="@string/pick_objective_label"
                        android:visibility="visible"
                        android:background="@color/main_green"
                        />

                    <ProgressBar
                        android:id="@+id/second_player_second_objective_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/player_2_pick_period_2_objective_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/roll"/>

                    <ImageView
                        android:id="@+id/player_2_period_2_display_or_hide_objective_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:src="@drawable/hide_icon"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</FrameLayout>
