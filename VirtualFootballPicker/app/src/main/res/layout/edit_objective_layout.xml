<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/edit_objective_label"
            />

        <TextView
            android:id="@+id/edit_objective_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/edit_objective_name_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_objective_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom : "/>

        <EditText
            android:id="@+id/edit_objective_name_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_objective_period_layout"
        android:paddingTop="40dp"
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_objective_name_layout"
        >

        <TextView
            android:id="@+id/edit_objective_period_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi-temps : "/>

        <RadioButton
            android:id="@+id/edit_objective_1st_period_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            />
        <RadioButton
            android:id="@+id/edit_objective_2nd_period_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <RadioButton
            android:id="@+id/edit_objective_both_periods_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tout"
            />

    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/edit_objective_apply_button"
        style="@style/buttonStyle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/edit_objective_period_layout"
        android:text="Appliquer"
        />

    <TextView
        android:id="@+id/objective_unsaved_changes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textColor="@color/warningColor"
        android:text="Des changements n'ont pas été sauvegardés.."
        android:visibility="invisible"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>



</RelativeLayout>